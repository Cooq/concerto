/*##########  STRUCTURE  ##########*/

.container-fluid {
	margin-left: $menuWidth;
	transition: margin 1s;
}

nav.minimized + .container-fluid {
	margin-left: $menuMinWidth;
	transition: margin 1s;
}

nav {
	width: $menuWidth;
	height: 100%;
	float: left;
	background-color: $menuColor;
	position: fixed;
	top: 0;
	bottom: 0;
	transition: margin 1s;
	overflow: auto;
	z-index: 9;

	// Force link to not underline
	a {
		text-decoration: none !important;
	}

	#menu-logobutton, & > p {
		margin: 15px;
	}

	#menu-logobutton.selected{
		color: $grayLightest;
	}

	& > p {
		margin-right: 55px;
		font-size: 15px;
		color: $gray;
	}

	// Triple bars collapse menu
	#menu-collapse {
		margin: 25px 15px;
		display: inline-block;
		float: right;
		color: $grayLight;
		font-size: 30px;
		transition: transform 1s;

		&:hover {
				color: $grayLightest;
		}
	}

	section {

		.menu-title > h1 {
			margin-left: 15px;
			text-transform: uppercase;
			font-size: 15px;
			color: $grayLight;
			letter-spacing: 0.1em;
		}

		.menu-actions > a {
			padding: 8px 15px;
			display: block;
			font-size: 15px;
			color: $gray;

			&:hover {
				box-sizing: padding-box;
				background-color: $menuColorHover;
				color: $grayLight;
			}

			&:last-of-type {
				margin-bottom: 15px;
			}
		}

		// The "before last" child must have padding bottom to not be below account informations
		&:nth-last-child(2){
			padding-bottom: 85px;
		}
	}

	.menu-bottom {
		color: $grayLight;
		position: fixed;
		bottom: 0;
		padding: 0 15px;
		// -16px for scrollbar size
		width: calc( #{$menuWidth - 2 * 15px} - 16px );
		background: $menuColor;
	}
}

nav.minimized {
	margin-left: #{ $menuMinWidth - $menuWidth} !important;
	transition: margin 1s;
	overflow: hidden;

	#menu-collapse {
		transform: rotate(180deg);
		transition: transform 1s;
	}
}

// Media queries for mobile phones
@media (max-width: 767px) {

	nav {
		margin-left: #{ $menuMinWidth - $menuWidth} !important;
		transition: margin 1s;
		overflow: hidden;

		#menu-collapse {
			transform: rotate(180deg);
			transition: transform 1s;
		}
	}
	nav.minimized {
		margin-left: 0 !important;
		overflow: auto;

		#menu-collapse {
			transform: rotate(0deg);
			transition: transform 1s;
		}
	}
}
