<li class="templates-item">
  <div class="cont thumb-icon <%= 'in-use' if template.screens.count > 0 %>">
    <% if can?(:read, template) %>
      <%= link_to template do %>
        <i class="concertocon-controller-templates"></i>
      <% end %>
    <% else %>
      <i class="concertocon-controller-templates"></i>
    <% end %>
  </div>
  <div class="cont">
    <p><b><%= link_to_if can?(:read, template), template.name, template %></b></p>
    <% if template.author.present? %>
      <div class="author"><%= t '.by', author: template.author %></div>
    <% end %>
    <% if template.screens.count > 0 %>
      <div class="screens-count"><%= t('.screens', count: template.screens.count) %></div>
    <% end %>
  </div>
</li>
